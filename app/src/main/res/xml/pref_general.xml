<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <SwitchPreference
        android:defaultValue="true"
        android:key="example_switch"
        android:summary="@string/geo_summary"
        android:title="@string/geo_msg" />



    <!-- NOTE: Hide buttons to simplify the UI. Users can touch outside the dialog to
         dismiss it. -->
    <!-- NOTE: ListPreference's summary should be set to its value by the activity code. -->
    <ListPreference
        android:defaultValue="-1"
        android:entries="@array/money_titles"
        android:entryValues="@array/pref_example_list_values"
        android:key="money_list"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="@string/money_type" />

    <ListPreference
        android:defaultValue="-1"
        android:entries="@array/measure_titles"
        android:entryValues="@array/pref_example_list_values"
        android:key="measure_list"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="@string/measure_type" />




</PreferenceScreen>
