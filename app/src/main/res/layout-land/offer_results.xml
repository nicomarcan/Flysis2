<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EFEBE9">




    <GridView
        android:id="@+id/offer_list_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:numColumns="1"
        android:orientation="vertical" />
    <ProgressBar
        android:id="@+id/results_progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@android:style/Widget.ProgressBar"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true" />

    <RelativeLayout
        android:id="@+id/search_results_error"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">
        <ImageView
            android:id="@+id/search_error"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_search_results"
            android:tint="#263238"
            android:layout_centerHorizontal="true"/>
        <TextView
            android:id="@+id/results_not_found"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#263238"
            android:layout_below="@id/search_error"
            android:textSize="17sp"
            android:layout_marginLeft="15dp"
            android:gravity="center"
            android:layout_marginRight="15dp"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>


</RelativeLayout>