<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="3dip"
        android:textSize="20sp"
        android:text="Fecha Aproximada" />



        <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/on"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:stretchColumns="1" >

            <TableRow
                android:id="@+id/one_month"
                android:background="?android:attr/selectableItemBackground">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:tint="#9e9e9e"
                    android:src="@drawable/ic_today_black_24px" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:padding="3dip"
                    android:text="Dentro de 1 mes" />
            </TableRow>

            <TableRow
                android:background="?android:attr/selectableItemBackground">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:tint="#9e9e9e"
                    android:src="@drawable/ic_today_black_24px" />

                <TextView
                    android:id="@+id/three_month"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="3dip"
                    android:layout_marginTop="15dp"
                    android:text="Dentro de 3 meses" />
            </TableRow>

            <TableRow
                android:background="?android:attr/selectableItemBackground">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:tint="#9e9e9e"
                    android:src="@drawable/ic_today_black_24px" />

                <TextView
                    android:id="@+id/six_month"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="3dip"
                    android:layout_marginTop="15dp"
                    android:text="Dentro de 6 meses" />
            </TableRow>

            <TableRow
                android:background="?android:attr/selectableItemBackground">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:tint="#9e9e9e"
                    android:src="@drawable/ic_today_black_24px" />

                <TextView
                    android:id="@+id/one_year"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="3dip"
                    android:layout_marginTop="15dp"
                    android:text="Dentro de 1 año" />
            </TableRow>

            <TableRow
                android:background="?android:attr/selectableItemBackground">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:tint="#9e9e9e"
                    android:src="@drawable/ic_today_black_24px" />

                <TextView
                    android:id="@+id/more_one_year"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="3dip"
                    android:layout_marginTop="15dp"
                    android:text="Después de un año" />
            </TableRow>

        </TableLayout>

</LinearLayout>