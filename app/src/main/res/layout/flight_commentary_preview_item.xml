<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:clickable="false"
    >

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:id="@+id/flight_comment_preview_thumbs"
        android:src="@drawable/ic_thumb_up_green_24dp"
        android:layout_marginEnd="5dp"
        />

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Base.Widget.AppCompat.RatingBar.Small"
        android:theme="@style/RatingBar"
        android:id="@+id/flight_comment_preview_stars"
        android:numStars="5"
        android:isIndicator="true"
        android:rating="2.0"
        android:layout_toEndOf="@id/flight_comment_preview_thumbs"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/flight_comment_preview_stars"
        android:layout_toEndOf="@id/flight_comment_view_thumbs"
        android:id="@+id/flight_comment_preview_description"
        android:textColor="@color/colorBlack"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"/>
</RelativeLayout>