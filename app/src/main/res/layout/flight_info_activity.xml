<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/flight_info_coordination"
    >

    <android.support.design.widget.AppBarLayout
        android:id="@+id/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        >

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/flight_info_collapsible_toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:contentScrim="?attr/colorPrimary"
            app:expandedTitleMarginStart="48dp"
            app:expandedTitleMarginEnd="64dp"
            android:fitsSystemWindows="true"
            android:clickable="true"

            >

            <fragment
                android:name="com.google.android.gms.maps.MapFragment"
                android:id="@+id/flight_info_map"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:clipToPadding="false"
                android:elevation="0dp"
                app:layout_collapseMode="parallax"

                />

            <android.support.v7.widget.Toolbar
                android:id="@+id/flight_info_toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                app:layout_collapseMode="pin"
                android:layout_marginTop="25dp"
                android:background="?attr/selectableItemBackground"/>

        </android.support.design.widget.CollapsingToolbarLayout>

    </android.support.design.widget.AppBarLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/add_flight_fab"
        app:layout_anchor="@id/app_bar_layout"
        app:layout_anchorGravity="bottom|right|end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:src="@drawable/ic_add_black_24dp"
        app:rippleColor="@color/lightPink"
        android:tint="@color/cardview_light_background"
        app:srcCompat="@drawable/ic_add_black_24dp"
        app:backgroundTint="@android:color/holo_red_dark"
        android:clickable="true"/>

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="10dp"
                app:cardUseCompatPadding="true"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:orientation="vertical"
                    android:background="@drawable/rect_back"
                    android:elevation="5dp"
                    android:id="@+id/linearLayout"
                    android:fitsSystemWindows="true"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="0dp"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:paddingBottom="20dp"
                        android:orientation="vertical"
                        >
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginTop="10dp"
                            >

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/flight_info_number"
                                android:clipToPadding="false"
                                android:textSize="20dp"
                                android:textColor="#000000"
                                android:layout_alignParentLeft="true"
                                android:layout_centerHorizontal="true"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/flight_info_status"
                                android:clipToPadding="false"
                                android:textSize="16dp"
                                android:layout_alignParentRight="true"
                                />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="right"
                            >
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/flight_info_status_description"
                                android:clipToPadding="false"
                                android:textSize="16dp"
                                android:textColor="#5b5b5b"
                                android:layout_centerHorizontal="false"
                                android:layout_alignParentLeft="true"/>

                        </RelativeLayout>
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#bfbfbf"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        />

                    <RelativeLayout
                        android:id="@+id/flight_info_detail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:background="?attr/selectableItemBackground"
                        android:padding="20dp"
                        android:orientation="vertical"
                        >
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/flight_info_detail_wrapper"
                            >
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_alignParentLeft="true"
                        android:id="@+id/flight_origin_wrapper"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/flight_origin"
                            android:clipToPadding="false"
                            android:text="Origen"
                            android:textSize="16dp"
                            android:textColor="#000000"
                            android:layout_centerHorizontal="false"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/flight_origin_content"
                            android:clipToPadding="false"
                            android:text="Buenos Aires"
                            android:textSize="16dp"
                            android:textColor="#424242"
                            android:layout_centerHorizontal="false"
                            android:layout_below="@id/flight_origin"/>
                    </RelativeLayout>
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:gravity="right"
                            android:layout_toRightOf="@id/flight_origin_wrapper"
                            android:id="@+id/flight_destination_wrapper"
                            >
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/flight_destination_2"
                                android:clipToPadding="false"
                                android:text="Destino"
                                android:textSize="16dp"
                                android:textColor="#000000"
                                android:layout_centerHorizontal="false"
                                android:gravity="right"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/flight_destination_content_2"
                                android:clipToPadding="false"
                                android:text="Miami"
                                android:textSize="16dp"
                                android:textColor="#424242"
                                android:layout_centerHorizontal="false"
                                android:layout_below="@id/flight_destination_2"
                                android:gravity="right"
                                />
                            </RelativeLayout>
                        </RelativeLayout>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/flight_info_more"
                        android:clipToPadding="false"
                        android:text="Ver mas"
                        android:textSize="20dp"
                        android:textColor="#022cff"
                        android:layout_centerHorizontal="true"
                        android:textAlignment="center"
                        android:layout_below="@id/flight_info_detail_wrapper"
                        />
                    </RelativeLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#bfbfbf"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        />
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="20dp"
                        android:clickable="true"
                        android:background="?attr/selectableItemBackground"
                        android:id="@+id/flight_post_comment"
                        >
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/flight_comments_head"
                            android:clipToPadding="false"
                            android:text="Recomendar el vuelo"
                            android:textSize="20dp"
                            android:textColor="#000000"
                            android:layout_centerHorizontal="true"
                            android:textAlignment="center"
                            android:textColorHint="#ff0000"/>
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_below="@id/flight_comments_head"
                            >
                            <ImageButton
                                android:layout_height="wrap_content"
                                android:layout_width="wrap_content"
                                android:src="@drawable/ic_thumb_up_black_24dp"
                                android:id="@+id/flight_comments_thumbs_up"
                                android:clickable="true"
                                android:backgroundTint="@android:color/white"
                                />
                            <ImageButton
                                android:layout_height="wrap_content"
                                android:layout_width="wrap_content"
                                android:src="@drawable/ic_thumb_down_black_24dp"
                                android:layout_toRightOf="@id/flight_comments_thumbs_up"
                                android:clickable="true"
                                android:id="@+id/flight_comments_thumbs_down"
                                android:backgroundTint="@android:color/white"
                                />
                        </RelativeLayout>
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#bfbfbf"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        />
                    <RelativeLayout
                        android:id="@+id/flight_comments"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:background="?attr/selectableItemBackground"
                        android:padding="20dp"
                        android:orientation="vertical"
                        >
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:id="@+id/flight_comment_stars">
                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/ic_star_black_24dp"
                                    />
                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/ic_star_black_24dp"/>
                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/ic_star_black_24dp"/>
                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/ic_star_black_24dp"/>
                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/ic_star_black_24dp"/>

                            </LinearLayout>
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_thumb_up_green_24dp"
                                android:gravity="right"
                                android:layout_alignParentRight="true"
                                />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="700dp"
                                android:text="Bueno vuelo!!!"
                                android:textSize="16dp"
                                android:textColor="@android:color/black"
                                android:layout_below="@id/flight_comment_stars"/>
                        </RelativeLayout>
                    </RelativeLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </FrameLayout>

    </android.support.v4.widget.NestedScrollView>
</android.support.design.widget.CoordinatorLayout>

