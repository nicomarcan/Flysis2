<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:fitsSystemWindows="true">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:contentScrim="?attr/colorPrimary"
            app:expandedTitleMarginStart="48dp"
            app:expandedTitleMarginEnd="64dp"
            android:fitsSystemWindows="true">

            <fragment
                android:name="com.google.android.gms.maps.MapFragment"
                android:id="@+id/map"
                android:layout_width="match_parent"
                android:layout_height="350dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:clipToPadding="false"
                android:elevation="0dp"
                app:layout_collapseMode="parallax"
                />

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                app:layout_collapseMode="pin" />

        </android.support.design.widget.CollapsingToolbarLayout>

    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:cardElevation="10dp"
                app:cardUseCompatPadding="true"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:orientation="vertical"
                    android:background="@drawable/rect_back"
                    android:elevation="5dp"
                    android:id="@+id/linearLayout"
                    android:fitsSystemWindows="true"
                    >
                    <!--
                    <ProgressBar
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/progress_bar"
                        android:paddingTop="0dp"
                        android:layout_above="@+id/map"
                        android:layout_alignParentStart="true"
                        android:layout_marginTop="-10dp"
                        android:clipToPadding="false"
                        android:elevation="3dp"/>
                    -->

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView"
                            android:clipToPadding="false"
                            android:text="Vuelo XXXX"
                            android:textSize="20dp"
                            android:textColor="#000000"
                            android:layout_alignParentLeft="true"
                            android:layout_centerHorizontal="true"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="25dp"/>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView3"
                            android:clipToPadding="false"
                            android:text="Sale en 20 minutos "
                            android:textSize="16dp"
                            android:textColor="#5b5b5b"
                            android:layout_marginTop="3dp"
                            android:layout_centerHorizontal="false"
                            android:layout_marginRight="10dp"
                            android:layout_alignParentRight="true"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView2"
                            android:clipToPadding="false"
                            android:text="Abordando"
                            android:textSize="16dp"
                            android:textColor="#000000"
                            android:layout_marginTop="3dp"
                            android:layout_marginLeft="10dp"
                            android:layout_centerHorizontal="false"
                            android:layout_alignParentLeft="true"
                            android:layout_toLeftOf="@id/textView3"/>

                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#bfbfbf"
                        android:layout_margin="15dp"
                        />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/flight_origin"
                            android:clipToPadding="false"
                            android:text="Origen"
                            android:textSize="16dp"
                            android:textColor="#000000"
                            android:layout_marginTop="3dp"
                            android:layout_marginLeft="20dp"
                            android:layout_centerHorizontal="false"
                            android:layout_alignParentLeft="true"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/flight_origin_content"
                            android:clipToPadding="false"
                            android:text="Buenos Aires"
                            android:textSize="16dp"
                            android:textColor="#424242"
                            android:layout_marginTop="3dp"
                            android:layout_centerHorizontal="false"
                            android:layout_marginRight="20dp"
                            android:layout_marginLeft="20dp"
                            android:layout_alignParentRight="true"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/flight_destination_2"
                            android:clipToPadding="false"
                            android:text="Destino"
                            android:textSize="16dp"
                            android:textColor="#000000"
                            android:layout_marginTop="3dp"
                            android:layout_marginLeft="20dp"
                            android:layout_centerHorizontal="false"
                            android:layout_alignParentLeft="true"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/flight_destination_content_2"
                            android:clipToPadding="false"
                            android:text="Miami"
                            android:textSize="16dp"
                            android:textColor="#424242"
                            android:layout_marginTop="3dp"
                            android:layout_centerHorizontal="false"
                            android:layout_marginRight="20dp"
                            android:layout_marginLeft="20dp"
                            android:layout_alignParentRight="true"/>
                    </RelativeLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/flight_info_more"
                        android:clickable="true"
                        android:clipToPadding="false"
                        android:text="Ver mas"
                        android:textSize="20dp"
                        android:textColor="#000000"
                        android:layout_above="@+id/linearLayout"
                        android:layout_centerHorizontal="true"
                        android:textAlignment="center"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="25dp"
                        android:textColorHint="#ff0000"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#bfbfbf"
                        android:layout_margin="15dp"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/flight_comments_head"
                        android:clipToPadding="false"
                        android:text="Recomendar el vuelo"
                        android:textSize="20dp"
                        android:textColor="#000000"
                        android:layout_above="@+id/linearLayout"
                        android:layout_centerHorizontal="true"
                        android:textAlignment="center"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="25dp"
                        android:textColorHint="#ff0000"/>
                    <ImageButton
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:layout_gravity="left"
                        android:onClick="scrollToTop"
                        android:src="@drawable/ic_thumb_up_black_24dp"
                        />


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/flight_destination"
                            android:clipToPadding="false"
                            android:text="Destino"
                            android:textSize="16dp"
                            android:textColor="#000000"
                            android:layout_marginTop="3dp"
                            android:layout_marginLeft="20dp"
                            android:layout_centerHorizontal="false"
                            android:layout_alignParentLeft="true"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/flight_destination_content"
                            android:clipToPadding="false"
                            android:text="Miami"
                            android:textSize="16dp"
                            android:textColor="#424242"
                            android:layout_marginTop="3dp"
                            android:layout_centerHorizontal="false"
                            android:layout_marginRight="20dp"
                            android:layout_marginLeft="20dp"
                            android:layout_alignParentRight="true"/>

                    </RelativeLayout>
                </LinearLayout>

            </android.support.v7.widget.CardView>

        </FrameLayout>

    </android.support.v4.widget.NestedScrollView>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        app:layout_anchor="@id/app_bar_layout"
        app:layout_anchorGravity="bottom|right|end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</android.support.design.widget.CoordinatorLayout>