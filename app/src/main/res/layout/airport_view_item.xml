<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    >


    <TextView
        android:id="@+id/airport_info"
        android:textColor="#FFFFFF"
        android:layout_width="match_parent"
        android:textSize="15sp"
        android:layout_height="wrap_content"
        android:text="@string/airport_info"
        android:layout_alignParentStart="true"
        />
    <TextView
        android:id="@+id/airport_info_2"
        android:textColor="#FFFFFF"
        android:layout_width="match_parent"
        android:textSize="15sp"
        android:layout_height="wrap_content"
        android:text="@string/airport_info_2"
        android:layout_below="@+id/airport_info"
        android:layout_alignParentStart="true"
        />

    <TextView
        android:id="@+id/airport_distance"
        android:textColor="#FFFFFF"
        android:layout_width="match_parent"
        android:textSize="15sp"
        android:layout_height="wrap_content"
        android:text="@+id/airport_distance"
        android:layout_below="@+id/airport_info_2"
        android:layout_alignParentStart="true"
        />



</RelativeLayout>
