<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="5dp"
        app:cardUseCompatPadding="true"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:paddingEnd="10dp"
            android:paddingStart="10dp"
            android:paddingBottom="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vuelo 23"
                android:gravity="start"
                android:id="@+id/flights_card_header"
                android:textSize="10dp"
                android:layout_marginTop="7.5dp"
                android:layout_alignParentStart="true"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:layout_toEndOf="@id/flights_card_header">
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_delete_black_10dp"
                    android:backgroundTint="@color/colorWhite"
                    />
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AEP"
                android:textAppearance="?android:attr/textAppearance"
                android:gravity="start"
                android:textSize="30dp"
                android:id="@+id/flights_card_origin"
                android:layout_below="@id/flights_card_header"
                />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_arrow_forward_black_24dp"
                android:layout_centerHorizontal="true"
                android:id="@+id/flights_card_middle_arrow"
                android:layout_marginTop="10dp"
                android:layout_below="@id/flights_card_header"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TMB"
                android:textAppearance="?android:attr/textAppearance"
                android:layout_toEndOf="@id/flights_card_origin"
                android:textSize="30dp"
                android:gravity="end"
                android:layout_below="@id/flights_card_header"
                android:id="@+id/flights_card_destination"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Saliendo en 20 minutos"
                android:gravity="center_horizontal"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/flights_card_middle_arrow"
                android:id="@+id/flights_card_description"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</FrameLayout>

