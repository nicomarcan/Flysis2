<?xml version="1.0" encoding="utf-8"?>
<FrameLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

<android.support.v7.widget.CardView
    android:layout_height="wrap_content"
    android:layout_width="match_parent"

    xmlns:android="http://schemas.android.com/apk/res/android"
    app:cardElevation="5dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:id="@+id/flight_comment_view_thumbs"
            android:src="@drawable/ic_thumb_up_green_24dp"
            android:layout_marginEnd="5dp"
            />

        <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Base.Widget.AppCompat.RatingBar.Small"
            android:theme="@style/RatingBar"
            android:id="@+id/flight_comment_view_stars"
            android:numStars="5"
            android:isIndicator="true"
            android:rating="2.0"
            android:layout_toEndOf="@id/flight_comment_view_thumbs"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/flight_comment_view_stars"
            android:layout_toEndOf="@id/flight_comment_view_thumbs"
            android:id="@+id/flight_comment_view_description"
            android:textColor="@color/colorBlack"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#bfbfbf"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_below="@id/flight_comment_view_description"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:id="@+id/flight_comment_separator"/>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/flight_comment_separator"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:id="@+id/flight_comment_friendliness_frame"
            android:layout_marginTop="5dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:id="@+id/flight_comment_friendliness"
                android:text="Amabilidad"
                />
            <RatingBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Base.Widget.AppCompat.RatingBar.Small"
                android:theme="@style/RatingBar"
                android:id="@+id/flight_comment_friendliness_stars"
                android:numStars="5"
                android:isIndicator="true"
                android:stepSize="0.5"
                android:rating="2.0"
                android:layout_gravity="end"
                />
        </FrameLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/flight_comment_friendliness_frame"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:id="@+id/flight_comment_food_frame"
            android:layout_marginTop="5dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:id="@+id/flight_comment_food"
                android:text="Comida"
                />
            <RatingBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Base.Widget.AppCompat.RatingBar.Small"
                android:theme="@style/RatingBar"
                android:id="@+id/flight_comment_food_stars"
                android:numStars="5"
                android:isIndicator="true"
                android:stepSize="0.5"
                android:rating="2.0"
                android:layout_gravity="end"
                />
        </FrameLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/flight_comment_food_frame"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:id="@+id/flight_comment_punctuality_frame"
            android:layout_marginTop="5dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:id="@+id/flight_comment_punctuality"
                android:text="Puntualidad"
                />
            <RatingBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Base.Widget.AppCompat.RatingBar.Small"
                android:theme="@style/RatingBar"
                android:id="@+id/flight_comment_punctuality_stars"
                android:numStars="5"
                android:isIndicator="true"
                android:stepSize="0.5"
                android:rating="2.0"
                android:layout_gravity="end"
                />
        </FrameLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/flight_comment_punctuality_frame"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:id="@+id/flight_comment_mileage_frame"
            android:layout_marginTop="5dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:id="@+id/flight_comment_mileage"
                android:text="Programa de pasajeros frecuentes"
                />
            <RatingBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Base.Widget.AppCompat.RatingBar.Small"
                android:theme="@style/RatingBar"
                android:id="@+id/flight_comment_mileage_stars"
                android:numStars="5"
                android:isIndicator="true"
                android:stepSize="0.5"
                android:rating="2.0"
                android:layout_gravity="end"
                />
        </FrameLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/flight_comment_mileage_frame"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:id="@+id/flight_comment_comfort_frame"
            android:layout_marginTop="5dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:id="@+id/flight_comment_comfort"
                android:text="Confort"
                />
            <RatingBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Base.Widget.AppCompat.RatingBar.Small"
                android:theme="@style/RatingBar"
                android:id="@+id/flight_comment_comfort_stars"
                android:numStars="5"
                android:isIndicator="true"
                android:stepSize="0.5"
                android:rating="2.0"
                android:layout_gravity="end"
                />
        </FrameLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/flight_comment_comfort_frame"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:id="@+id/flight_comment_quality_frame"
            android:layout_marginTop="5dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:id="@+id/flight_comment_quality"
                android:text="Relacion precio/calidad"
                android:layout_gravity="left"

                />
            <RatingBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Base.Widget.AppCompat.RatingBar.Small"
                android:theme="@style/RatingBar"
                android:id="@+id/flight_comment_quality_stars"
                android:numStars="5"
                android:isIndicator="true"
                android:stepSize="0.5"
                android:rating="2.0"
                android:layout_gravity="end"
                />
        </FrameLayout>

    </RelativeLayout>
</android.support.v7.widget.CardView>
</FrameLayout>