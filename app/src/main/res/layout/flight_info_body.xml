<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="10dp"
    app:cardUseCompatPadding="true"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="vertical"
        android:background="@drawable/rect_back"
        android:elevation="5dp"
        android:id="@+id/linearLayout"
        android:fitsSystemWindows="true"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="0dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingBottom="20dp"
            android:orientation="vertical"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/flight_info_number"
                    android:clipToPadding="false"
                    android:textSize="20dp"
                    android:textColor="#000000"
                    android:layout_alignParentLeft="true"
                    android:layout_centerHorizontal="true"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/flight_info_status"
                    android:clipToPadding="false"
                    android:textSize="16dp"
                    android:layout_alignParentRight="true"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="right"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/flight_info_status_description"
                    android:clipToPadding="false"
                    android:textSize="16dp"
                    android:textColor="#5b5b5b"
                    android:layout_centerHorizontal="false"
                    android:layout_alignParentLeft="true"/>

            </RelativeLayout>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#bfbfbf"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            />

        <RelativeLayout
            android:id="@+id/flight_info_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:background="?attr/selectableItemBackground"
            android:padding="20dp"
            android:orientation="vertical"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/flight_info_detail_wrapper"
                >
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_alignParentLeft="true"
                    android:id="@+id/flight_origin_wrapper"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/flight_origin"
                        android:clipToPadding="false"
                        android:text="Origen"
                        android:textSize="16dp"
                        android:textColor="#000000"
                        android:layout_centerHorizontal="false"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/flight_origin_content"
                        android:clipToPadding="false"
                        android:textSize="16dp"
                        android:textColor="#424242"
                        android:layout_centerHorizontal="false"
                        android:layout_below="@id/flight_origin"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:gravity="right"
                    android:layout_toRightOf="@id/flight_origin_wrapper"
                    android:id="@+id/flight_destination_wrapper"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/flight_destination_2"
                        android:clipToPadding="false"
                        android:text="Destino"
                        android:textSize="16dp"
                        android:textColor="#000000"
                        android:layout_centerHorizontal="false"
                        android:gravity="right"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/flight_destination_content_2"
                        android:clipToPadding="false"
                        android:textSize="16dp"
                        android:textColor="#424242"
                        android:layout_centerHorizontal="false"
                        android:layout_below="@id/flight_destination_2"
                        android:gravity="right"
                        />
                </RelativeLayout>
            </RelativeLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/flight_info_more"
                android:clipToPadding="false"
                android:text="Ver mas"
                android:textSize="20dp"
                android:layout_centerHorizontal="true"
                android:textAlignment="center"
                android:layout_below="@id/flight_info_detail_wrapper"
                />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#bfbfbf"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:id="@+id/flight_post_comment"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/flight_comments_head"
                android:clipToPadding="false"
                android:text="Recomendar el vuelo"
                android:textSize="20dp"
                android:textColor="#000000"
                android:layout_centerHorizontal="true"
                android:textAlignment="center"
                android:textColorHint="#ff0000"/>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/flight_comments_head"
                >
                <ImageButton
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:src="@drawable/ic_thumb_up_black_24dp"
                    android:id="@+id/flight_comments_thumbs_up"
                    android:clickable="true"
                    android:backgroundTint="@android:color/white"
                    />
                <ImageButton
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:src="@drawable/ic_thumb_down_black_24dp"
                    android:layout_toRightOf="@id/flight_comments_thumbs_up"
                    android:clickable="true"
                    android:id="@+id/flight_comments_thumbs_down"
                    android:backgroundTint="@android:color/white"
                    />
            </RelativeLayout>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#bfbfbf"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            />
        <LinearLayout
            android:id="@+id/flight_comments"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:background="?attr/selectableItemBackground"
            android:padding="10dp"
            android:orientation="vertical"
            >
            <ListView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/flight_comments_preview_list"
                android:orientation="vertical"
                android:clickable="false"
                android:focusable="false"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ver mas comentarios"
                android:textSize="20dp"
                android:gravity="center_horizontal"
                />
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>