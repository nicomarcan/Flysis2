<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <stroke
                android:width="0dp"
                android:color="@color/md_black_1000" />
            <corners
                android:radius="2dp" />
            <padding
                android:left="8dp"
                android:top="8dp"
                android:right="8dp"
                android:bottom="8dp" />
        </shape>

    </item>
    <item>
        <shape>
            <stroke
                android:width="0dp"
                android:color="@color/md_grey_100" />
            <corners
                android:radius="2dp" />
            <padding
                android:left="8dp"
                android:top="8dp"
                android:right="8dp"
                android:bottom="8dp" />
        </shape>
    </item>
</selector>